<main id="main">
  <section id="hero" class="hero d-flex align-items-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 d-flex flex-column justify-content-center">
          <h1 data-aos="fade-up">Students Lab</h1>
          <h1 data-aos="fade-up">Remarkable People</h1>
          <h2 data-aos="fade-up" data-aos-delay="400">How you worked, so you earned</h2>
          <% if current_user.businessman? %>
            <div data-aos="fade-up" data-aos-delay="600">
              <div class="text-center text-lg-start">
                <a href="<%= new_project_path %>" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                  <span>Get Started</span>
                  <i class="bi bi-arrow-right"></i>
                </a>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
          <img src="/assets/theme/img/hero-img.png" class="img-fluid" alt="">
        </div>
      </div>
    </div>
  </section>
</main>
