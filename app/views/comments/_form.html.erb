<%= simple_form_for Comment.new do |form| %>
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :commentable_id, value: commentable_id %>
    <%= form.hidden_field :commentable_type, value: commentable_type %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>